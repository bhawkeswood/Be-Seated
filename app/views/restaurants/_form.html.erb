<div id="form_box"><%= form_for @restaurant do |f| %>

	<div class="field">
		<%= f.label :name %></br>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :address %></br>
		<%= f.text_area :address %>
	</div>
	<div class="field">
		<%= f.label :price_range %></br>
		<%= f.number_field :price_range %>
	</div>
	<div class="field">
		<%= f.label :menu_url %></br>
		<%= f.text_field :menu_url %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
</div>